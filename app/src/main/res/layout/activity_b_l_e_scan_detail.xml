<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ble.detail_ble.BLEScanDetailActivity">

    <TextView
        android:id="@+id/namedevice"
        android:layout_width="186dp"
        android:layout_height="20dp"
        android:layout_marginStart="192dp"
        android:layout_marginTop="32dp"
        android:text="@string/name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/deviceAdress"
        android:layout_width="190dp"
        android:layout_height="24dp"
        android:layout_marginStart="192dp"
        android:layout_marginTop="68dp"
        android:text="@string/address"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/nordicimage"
        android:layout_width="156dp"
        android:layout_height="126dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="4dp"
        android:contentDescription="@string/img_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/nrf" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/devicecharacteristic"
        android:layout_width="370dp"
        android:layout_height="684dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="148dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>